{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": false,
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "./**/*.ts",
    "./**/*.ts",
    "./**/*.test.ts",
    "./src/**/*.d.ts",
    "./types.ts",
    "./package.json",
    "./node_modules/vitest**/*.d.ts",
    "./src/@types/global.d.ts"
  ]
}
